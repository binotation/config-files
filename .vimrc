colorscheme desert
set background=dark
syntax on
set t_Co=256
set showmatch
set tabstop=8
set softtabstop=4
set expandtab
set autoindent
set shiftwidth=4
filetype indent on
set colorcolumn=80
highlight ColorColumn ctermbg=8 guibg=lightgrey
set number
set wildmenu
set mouse=a
set ruler
set cursorline
set backspace=indent,eol,start